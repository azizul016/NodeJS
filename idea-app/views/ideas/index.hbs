              <li class="page-item"><a class="page-link" href="/ideas?page={{previousPage}}">{{previousPage}}</a></li>
            {{/if}}
              <li class="page-item active" aria-current="page"><a class="page-link" href="/ideas?page={{currentPage}}">{{currentPage}}</a></li>
            {{#if hasNextPage}}

                  {{/if}}
                  {{/if}}
                  {{!-- showing first page all time end --}}



                  {{#if hasPreviousPage}}
                    <li class="page-item"><a class="page-link" href="/categories/{{categoryName}}/ideas?page={{previousPage}}">{{previousPage}}</a></li>
                  {{/if}}
                    <li class="page-item active" aria-current="page"><a class="page-link" href="/categories/{{categoryName}}/ideas?page={{currentPage}}">{{currentPage}}</a></li>
                  {{#if hasNextPage}}
                    <li class="page-item"><a class="page-link" href="/categories/{{categoryName}}/ideas?page={{nextPage}}">{{nextPage}}</a></li>
                  {{/if}}


                    {{!-- showing last page all time start --}}
                     
                    {{#if lastPage}}
                        {{#if (comparePaginationPageValue lastPage currentPage) }}
                        {{#if (comparePaginationPageValue lastPage nextPage)}}
                          <li class="page-item"><a class="page-link" href="/categories/{{categoryName}}/ideas?page={{lastPage}}">{{lastPage}}</a></li>
                    {{/if}}
                  {{/if}}
                    {{/if}}
                  {{!-- showing last page all time end --}}
                </ul>


        {{!-- {{#each ideas}}
          <div class="card my-3">
            <div class="card-body">
              <h5 class="card-title">{{title}}</h5>
              <div class="card-text">{{{trancateContent description 30}}}</div>

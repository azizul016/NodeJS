<form action="/ideas?_csrf={{csrfToken}}" method="POST" enctype="multipart/form-data">
  <div class="mb-3">
    <label for="title" class="form-label">Title</label>
    <input type="text" class="form-control" name="title" id="title" {{#if idea.title}}
    value="{{idea.title}}"
  {{/if}} />
  </div>
  <div class="mb-3 description">
    <label for="descriotion" class="form-label">Description</label>
    <textarea
      name="description"
      id="description"
      rows="5"
      class="form-control"
    >
    {{#if idea.description}}
    {{idea.description}}
    {{/if}}
    </textarea>
  </div>
  <div class="mb-3">
    <label for="status">Status</label>
    <select for="status" class="form-select" name="status" id="status">
      <option value="public"  {{compareValues "public" idea.status}}>public</option>
      <option value="private" {{compareValues "private" idea.status}}>private</option>
    </select>
  </div>

  {{!-- for category start --}}

  {{#if categories}}
      <div class="mb-3">
          <label for="categories">Category</label>
          <select for="categories" multiple="multiple" class="form-select" name="categories" id="categories">
            {{#each categories}}
                <option value={{category}} >{{category}}</option>
            {{/each}}
          </select>
      </div>
  {{/if}}
  
  {{!-- for category end --}}

{{!-- for tags --}}
  <div class="my-3">
    <label for="tags" class="form-label">Tags</label>
    <input type="text" class="form-control" id="title" name= "tags" {{#if idea.tags}}
      value={{idea.tags}} {{/if}} data-role="tagsinput" />
  </div>
{{!-- tag finish --}}

{{!-- image upload start --}}
      <div class="mb-3">
      <label for="ideaPicture" class="form-label">Idea Picture</label>
      <input
      type="file"
      class="form-control"
      id="ideaPicture"
      placeholder="Idea Picture"
      name="ideaPicture"
      {{!-- {{#if userInput.email}} value="{{userInput.email}}" {{/if}} --}}
      />
          </div>
{{!-- image upload end --}}

  <div class="mb-3 form-check">
    <input
      type="checkbox"
      name="allowComments"
      class="form-check-input"
      id="allowComments"
      {{#if idea.allowComments}}
        checked = "true"
        {{/if}}
    />
    <label class="form-check-label" for="allowComments">ALlow Comments</label>
  </div>
  <button disabled type="submit" style="display:none">Add Idea</button>
  <button type="" class="btn btn-primary">Submit</button>
</form>